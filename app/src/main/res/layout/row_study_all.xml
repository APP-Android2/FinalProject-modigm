<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_light_background"
        app:cardElevation="2dp"
        app:strokeColor="@color/white"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewStudyAllPic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_modigm"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center|left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewStudyAllState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모집중"
                        android:textColor="@color/pointColor"
                        android:textStyle="bold"
                        android:textSize="14dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewStudyAllStateMeet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 온라인"
                        android:textColor="#0FA981"
                        android:textStyle="bold"
                        android:textSize="14dp"/>
                </LinearLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewStudyAllTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kotlin 스터디 모집합니다!"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_watch"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewStudyAllStatePeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 단기 "
                        android:textColor="@color/textGray"
                        android:textSize="14dp"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_person"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textViewStudyAllStateInwon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 1/20"
                        android:textColor="@color/textGray"
                        android:textSize="14dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageViewStudyAllHeart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_favorite_24px"
                            app:tint="@color/pointColor"
                            android:layout_gravity="right"/>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>