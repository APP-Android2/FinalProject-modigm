                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C#"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruby(인터프리터언어)"/>
