<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        tools:context=".ui.write.WriteFieldFragment">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"

            android:layout_marginEnd="128dp"
            android:text="@string/textView_WriteFieldFragment_question"
            android:textSize="18dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_writeField_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"

            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textView"

            android:onClick="onCardClicked"

            app:strokeColor="@color/textGray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"

                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                android:text="@string/textView_WriteFieldFragment_study"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="24dp"

                android:layout_marginBottom="12dp"
                android:text="@string/textView_WriterFieldFragment_study_content"
                android:textColor="@color/textGray"
                android:textSize="14dp"

                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_writeField_contest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"

            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardview_writeField_study"

            android:onClick="onCardClicked"

            app:strokeColor="@color/textGray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"

                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                android:text="@string/textView_WriterFieldFragment_contest"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="24dp"

                android:layout_marginBottom="12dp"
                android:text="@string/textView_WriterFieldFragment_contest_content"
                android:textColor="@color/textGray"
                android:textSize="14dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_writeField_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"

            android:onClick="onCardClicked"

            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardview_writeField_contest"

            app:strokeColor="@color/textGray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"

                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                android:text="@string/textView_WriterFieldFragment_project"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="24dp"

                android:layout_marginBottom="12dp"
                android:text="@string/textView_WriterFieldFragment_project_content"
                android:textColor="@color/textGray"
                android:textSize="14dp" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>