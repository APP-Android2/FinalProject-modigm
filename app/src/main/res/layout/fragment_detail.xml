<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayoutDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:transitionGroup="true"
        tools:context=".ui.detail.DetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarDetail"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                app:collapsedTitleTextAppearance="@style/toolbarText"
                app:collapsedTitleTextColor="@color/black"
                app:contentScrim="@color/white"
                app:expandedTitleTextAppearance="@style/toolbarText"
                app:expandedTitleTextColor="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <ImageView
                    android:id="@+id/imageViewDetailCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_detail_1"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageViewDetailUserPic"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/image_detail_2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textviewDetailTitle"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Kotlin 스터디 모집합니다"
                                        android:textSize="20dp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/imageViewDetailMenu"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/icon_settings_24px"
                                        app:tint="@color/black" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="스터디장"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:id="@+id/textViewDetailUserName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="OOO"
                                        android:layout_marginStart="4dp"
                                        android:textSize="16dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="소개글"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewDetailIntro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Lorem ipsum dolor sit amet consectetur. \n\nTurpis id orci vitae pellentesque neque ut eu elit. \n\nMattis mauris ornare ut eget diam. \n\nCursus massa quam molestie lacus pellentesque lectus. \n\nAdipiscing tincidunt vestibulum morbi magna sed integer faucibus orci. \n\nMaecenas non in mattis turpis sit leo porttitor a. \n\nNunc urna est id iaculis a sapien placerat. \n\nMauris tristique in risus integer imperdiet. Lorem ipsum dolor sit amet consectetur. \n\nTurpis id orci vitae pellentesque neque ut eu elit. \n\nMattis mauris ornare ut eget diam. \n\nCursus massa quam molestie lacus pellentesque lectus. \n\nAdipiscing tincidunt vestibulum morbi magna sed integer faucibus orci. \n\nMaecenas non in mattis turpis sit leo porttitor a. \n\nNunc urna est id iaculis a sapien placerat. \n\nMauris tristique in risus integer imperdiet."
                                android:textSize="16dp" />

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chipGroup_join_interest"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                app:chipSpacingHorizontal="8dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="정보"
                                android:textColor="@color/pointColor"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewDetailStudyType"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/icon_clock_24px"
                                    app:tint="@color/black" />

                                <TextView
                                    android:id="@+id/textViewDetailStudyType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="단기"
                                    android:textSize="16dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/icon_group_24px"
                                    app:tint="@color/black" />

                                <TextView
                                    android:id="@+id/textViewDetailMember"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="1"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="/"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/textViewDetailMemberTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="20"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="명"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/textViewDetailApplyMethod"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="(신청제)"
                                    android:textSize="16dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="80dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/icon_location_on_24px"
                                    app:tint="@color/black" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textviewDetailFragmentPlace"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:text="온라인"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:id="@+id/textviewDetailFragmentDetailPlace"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:text="상세주소"
                                        android:textSize="16dp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomBarDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:id="@+id/buttonDetailLike"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_favorite_24px"
                    app:tint="@color/pointColor" />
                <TextView
                    android:id="@+id/textViewDetailState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/icon_expand_more_24px"
                    android:text="모집중"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/buttonDetailApply"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="8dp"
                    android:layout_marginLeft="10dp"
                    android:text="신청하기"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_send_plane_24px"
            app:fabSize="normal"
            app:layout_anchor="@id/bottomBarDetail"
            app:layout_anchorGravity="top|end"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@color/pointColor"
            app:tint="@color/white"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>