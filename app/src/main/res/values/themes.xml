<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Modigm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

        <!--배경색-->
        <item name="android:windowBackground">@color/white</item>

        <!--텍스트컬러-->
        <item name="android:textColor">@color/black</item>

        <!--기본 색상(버튼)-->
        <item name="colorPrimary">#1A51C5</item>

    </style>

    <style name="roundCornerBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/roundCornerModalStyle</item>
    </style>
    
    <style name="roundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/style_bottom_sheet_round_top</item>
    </style>

    <style name="Theme.Modigm" parent="Base.Theme.Modigm" />
</resources>